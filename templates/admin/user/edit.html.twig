{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'utilisateur n°{{ user.fullName }}{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification de l'utilisateur n°{{ user.fullName }}</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col mb-5">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Corriger l'utilisateur ?</h4>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check">
                                Enregistrer les modifications
                            </i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Les annonces</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ad in user.ads %}
                                <tr>
                                    <td>{{ ad.id }}</td>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card bg-light mt-5">
                    <div class="card-header">
                        <h4 class="card-title">Les réservations</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date de réservation</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for booking in user.bookings %}
                                <tr>
                                    <td>{{ booking.id }}</td>
                                    <td>{{ booking.createdAt | date('d/Y/Y H:i') }}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card bg-light mt-5">
                    <div class="card-header">
                        <h4 class="card-title">Les commentaires</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Note</th>
                                <th>Commentaire</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for comment in user.comments %}
                                <tr>
                                    <td>{{ comment.id }}</td>
                                    <td>{{ comment.rating }}
                                    </td>
                                    <td>{{ comment.content }}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
